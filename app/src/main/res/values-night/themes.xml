<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StocksAndCrypto" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MySparkViewStyle">
        <item name="spark_lineColor">@color/pink</item>
        <item name="spark_lineWidth">2dp</item>
        <item name="spark_cornerRadius">2dp</item>
        <item name="spark_fill">false</item>

        <item name="spark_baseLineColor">@color/white</item>
        <item name="spark_baseLineWidth">10dp</item>

        <item name="spark_scrubLineColor">@color/green</item>
        <item name="spark_scrubLineWidth">10dp</item>
        <item name="spark_scrubEnabled">true</item>

        <item name="spark_animateChanges">true</item>
    </style>
</resources>